module Node
{
    parameters:
        int nid;

        @display("bgb=273,87;bgl=2");
    gates:
        input inG;
        output outG;

    submodules:
        AL: App_layer {
            id = nid;
            @display("p=30,40");
        }
        DL: Dl_layer {
            id = nid;
            @display("p=119,40");
        }
        PL: P_layer {
            id = nid;
            @display("p=211,40");
        }

    connections:
        AL.toDL --> DL.fromAL;
        AL.fromDL <-- DL.toAL;
        DL.toPL --> PL.fromDL;
        DL.fromPL <-- PL.toDL;
//        PL.toNode --> outG;
//        inG --> PL.fromNode;

}
